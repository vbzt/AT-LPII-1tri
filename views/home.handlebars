{{#if pacientes}}
    <div class="container">
    <div class="pacientes-container">
      {{#each pacientes}}
      <div class="card  mb-5">
        <div class="card-body paciente-card p-4">
          <h3 class="card-title">Paciente {{this.id}}</h2>
          <p class="card-text">Nome: {{this.nome}}</p>
          <p class="card-text">Idade: {{this.idade}}</p>
          <h4 class="card-title">Remédios de {{this.nome}}</h4>
          <ul class="list-group list-group-flush">
            {{#each this.medicamentos}}
            <li class="list-group-item">
              <p class="mb-0">Remédio: {{this.remedio}}</p>
              <p class="mb-0">Quantidade: {{this.quantidade}}</p>    
              <p class="mb-0">Tempo: {{this.tempo}}</p>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{else}}
  <h3>Parece que ainda não temos pacientes registrados!</h3>
{{/if}}